@model WaterpoloAppNet.Models.User

@{
    ViewData["Title"] = "Index";
}

<h1>Login</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Userame" class="control-label"></label>
                <input asp-for="Userame" class="form-control" />
                <span asp-validation-for="Userame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                <input type="submit" value="Login as a guest" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
